{
  "name": "agentproof",
  "version": "0.1.0",
  "description": "The DMV for AI Agents - Universal agent verification service",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r public dist/",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "db:setup": "tsx src/db/setup.ts",
    "test": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "ai",
    "agents",
    "verification",
    "identity",
    "proof-of-agency"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/packtman/Agentproof"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "better-sqlite3": "^12.6.2",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "nanoid": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
