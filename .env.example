# AgentProof Configuration
# Copy this to .env and fill in your values

# Server
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database (SQLite path)
DATABASE_PATH=./data/agentproof.db

# JWT Keys (generate with: bun run src/scripts/generate-keys.ts)
# These are Ed25519 keys in base64 format
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# Challenge settings
CHALLENGE_EXPIRY_MINUTES=5
PROOF_EXPIRY_DAYS=365

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_CHALLENGES=10

# OAuth (for owner claiming - optional for MVP)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# Admin Dashboard
# IMPORTANT: Set a strong, unique secret (minimum 16 characters)
# Generate with: openssl rand -base64 32
ADMIN_SECRET=your-secure-admin-secret-here

# Optional: IP allowlist for admin access (comma-separated)
# If set, only these IPs can access admin panel
# ADMIN_ALLOWED_IPS=1.2.3.4,5.6.7.8

# Optional: Bind sessions to IP (stricter security, may cause issues with VPN/mobile)
# ADMIN_BIND_SESSION_TO_IP=true

# Email Notifications (using Resend - https://resend.com)
RESEND_API_KEY=
ADMIN_EMAIL=your@email.com
FROM_EMAIL=KnowYourClaw <noreply@knowyourclaw.com>

# Platform Registration
# Set to "true" to require email verification for new platforms
# Default (false): platforms get API key immediately on registration
# When enabled: platforms must verify email before getting API key
REQUIRE_EMAIL_VERIFICATION=false
